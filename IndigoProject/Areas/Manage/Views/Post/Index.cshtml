@using IndigoProject.ViewModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

@model HomeVM


<div class="col-12">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Responsive Table</h6>
        <div class="table-responsive">
            <table class="table" style="margin-left:300px">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">Image</th>
                        <th scope="col">Actions</th>
                        <th scope="col">
                            <a class="btn btn-primary" asp-controller="Post" asp-action="Create">Create</a>
                        </th>

                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model.Posts)
                    {
                        <tr>
                            <th>@item.Id</th>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>
                                <img src="~/upload/Post/@item.ImageUrl" style="width:60px; height:60px">
                            </td>

                            <td>
                                <a class="btn btn-primary" asp-controller="Post" asp-action="Update" asp-route-id=@item.Id>Update </a>
                                <a class="btn btn-primary" asp-controller="Post" asp-action="Delete" asp-route-id=@item.Id>Delete</a>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>
